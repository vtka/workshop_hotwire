<%# locals: (artist:, tracks:) -%>
<%= turbo_frame_tag dom_id(artist, :popular_tracks), target: "_top" do %>
  <h2 class="mt-4 text-header-2">Popular</h2>
  <ul class="tracks mt-2">
    <%= render partial: 'tracks/track', collection: tracks, as: :track, locals: { enqueueble: true } %>
    <li class="track">
      <span class="track--number"></span>
      <%= link_to 'Load more', artist_path(artist, tracks_limit: tracks.count + 5), class: "text-secondary hover:text-primary transition-colors", data: {"turbo-frame" => "_self"} %>
    </li>
  </ul>
<% end %>
